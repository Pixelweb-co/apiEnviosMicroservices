# Imagen base
FROM node:16-alpine

# Crear el directorio de la aplicaci贸n
WORKDIR /app

# Copiar los archivos de la aplicaci贸n
COPY package*.json ./
COPY . .


CMD ['apt', 'update']

CMD ['apt', 'install', 'iputils-ping']
